<div class="container search-bar">
  {{!-- sorting bar --}}
  <div>
          <form action="/records" method="get">
            <div class="input-group mb-3">
          
              <label class="input-group-text" for="category">帳目類型</label>
              <select class="form-control" id="category" name="category" id="category" onchange="this.form.submit()">
                <option value="ALL">全部</option>
                <!--有 selectCategory -->
                {{#if selectedCategory }}
                {{#each categories as | cate |}}
                {{#with ../selectedCategory as |selectedCate|}}
                {{#isSame cate.name selectedCate}}
                <option value="{{cate.name}}" selected>{{cate.name}}</option>
                {{else}}
                <option value="{{cate.name}}">{{cate.name}}</option>
                {{/isSame}}
                {{/with}}
                {{/each}}
          
                <!--沒有 selectCategory -->
                {{else}}
                {{#each categories}}
                <option value="{{this.name}}">{{this.name}}</option>
                {{/each}}
                {{/if}}
              </select>
            </div>
          </form>

  </div>
  {{!-- total amount --}}
  <div class="d-flex align-items-start flex-row" style="height: 75px;">
    <h3 class="p-2">Total Amount:</h3>
    <h1 class="d-flex justify-content-center"> {{totalAmount}} </h1>
  </div>
  {{!-- each expense --}}
  <div class="card" style="width: 30rem height: 75px;">
    <div class="card-header">
      <b>Expense Details</b>
    </div>
    <ul class="list-group list-group-flush">
      {{#each expense}}
      <li class="list-group-item display: inline">
        <tr>
          <td>{{this.icon}}</td>
          <td>{{this.name}}</td>
          <td>{{this.date}}</td>
          <td>{{this.amount}}</td>
          <td><button type="button" class="btn btn-success">edit</button></td>
          <td><button type="button" class="btn btn-secondary">delete</button></td>
        </tr>
        {{/each}}
      </li>
    </ul>
  </div>
  {{!-- add on button --}}
  <div class="ml-auto p-2 mx-auto" display="block">
    <a href="/records/new">
      <button type=" button" class="btn btn-primary">add new expenses</button></a>
  </div>
</div>